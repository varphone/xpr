include ../Common.mk
-include ../Config.mk

libxpr_DEFS     =
libxpr_OBJS     =
libxpr_CFLAGS   = $(BUILD_OPT_FLAGS) -D_GNU_SOURCE -DPIC -fPIC -I ../include
libxpr_CXXFLAGS =
libxpr_LDFLAGS  = -L../lib -shared -Wl,--version-script=libxpr.sym
libxpr_LIBS     =

include Modules.mk

config_FILE = ../include/xpr/xpr_config.h
config_VARS = $(sort $(foreach v,$(sort $(.VARIABLES)),$(filter XPR_%,$v)))

libxpr_CFLAGS      += -DHAVE_STDINT_H=1 -DHAVE_MP=1 $(libxpr_DEFS)
libxpr_CFLAGS      += -include $(config_FILE)
ifneq ($(TOOLSET_NAME),)
libxpr_CFLAGS      += -I../contrib/$(TOOLSET_NAME)/include
libxpr_LDFLAGS     += -L../contrib/$(TOOLSET_NAME)/lib
endif
libxpr_CXXFLAGS    += $(libxpr_CFLAGS)
libxpr_LIBS += -Wl,-Bdynamic -lstdc++ -lpthread -lm -ldl -lavcodec -lavresample -lavutil -lswscale -Wl,-Bdynamic

targets =
ifeq ($(BUILD_STATIC),1)
targets += libxpr.a
endif
ifeq ($(BUILD_SHARED),1)
targets += libxpr.so
endif

all: prepare $(targets) local_install

prepare: $(config_FILE) $(config_VARS) config_DEFS

libxpr.a: $(libxpr_OBJS)
	$(ECHO) "[  Archive] $@"
	$(AR) crv $@ $^

libxpr.so: $(libxpr_OBJS)
	$(ECHO) "[     Link] $@"
	$(LD) $(LDFLAGS) $(libxpr_LDFLAGS) $^ -o $@ $(libxpr_LIBS)

%.o: %.cpp
	$(ECHO) "[Compiling] $^"
	$(CXX) $(CXXFLAGS) $(libxpr_CXXFLAGS) $($(call filter_spc,$^)_CXXFLAGS) -c $^ -o $@

%.o: %.c
	$(ECHO) "[Compiling] $^"
	$(CC) $(CFLAGS) $(libxpr_CFLAGS) $($(call filter_spc,$^)_CFLAGS) -c $^ -o $@

$(config_FILE):
	@echo "// Auto generated by Makefile" > $@
	@echo "// Date: $$(date)\n" >> $@

$(config_VARS): $(config_FILE)
	@echo "// $(@)" >> $^; \
	if [ x$($(@)) = x1 ]; then \
	  echo "#define HAVE_$@ $($@)" >> $^; \
	else \
	  echo "#undef HAVE_$@" >> $^; \
	fi; \
	echo "" >> $^; \

config_DEFS: $(config_FILE)
	@echo "#define HAVE_SIGNAL_H 1" >> $^
	@echo "#define HAVE_TIME_H 1" >> $^
	@echo "#define HAVE_UNISTD_H 1" >> $^

clean:
	$(RM) $(libxpr_OBJS) $(targets)

local_install: $(targets)
	$(ECHO) "[  Install] Copy $^ to ../lib/"
	@[ -d ../lib/ ] || mkdir ../lib
	$(CP) $^ ../lib/

strip: libxpr.so
	$(STRIP) $^
	make local_install

.PHONY: $(config_FILE)

